<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.OrderCPU.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/dark</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="Widget.OrderCPU.OutlinedButton.Cancel" parent="Widget.OrderCPU.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="strokeColor">@color/blue_200</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:minWidth">250dp</item>
    </style>

    <style name="Widget.OrderCPU.ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.OrderCPU.Button.One" parent="Widget.OrderCPU.OutlinedButton">
        <item name="android:backgroundTint">@color/red_200</item>
    </style>

    <style name="Widget.OrderCPU.Button.Two" parent="Widget.OrderCPU.OutlinedButton">
        <item name="android:backgroundTint">@color/blue_500</item>
    </style>

    <style name="Widget.OrderCPU.Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>
</resources>